<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <!-- Left chat view -->
    <LinearLayout
        android:id="@+id/left_chat_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Profile image for left chat -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/left_profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ai_default"
            android:scaleType="centerCrop"
            android:layout_marginStart="8dp"
            app:shapeAppearanceOverlay="@style/ImageView.Circle"/>

        <!-- Chat message text for left chat -->
        <TextView
            android:id="@+id/left_chat_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#1E88E5"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Right chat view -->
    <LinearLayout
        android:id="@+id/right_chat_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginStart="80dp">

        <!-- Chat message text for right chat -->
        <TextView
            android:id="@+id/right_chat_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#7CB342"
            android:layout_weight="1"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginEnd="8dp" />

        <!-- Profile image for right chat -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/right_profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/profile_default"
            android:scaleType="centerCrop"
            android:layout_marginStart="8dp"
            app:shapeAppearanceOverlay="@style/ImageView.Circle"/>

    </LinearLayout>

</RelativeLayout>
