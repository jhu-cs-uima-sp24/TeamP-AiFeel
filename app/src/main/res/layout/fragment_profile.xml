<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:layout_gravity="top"
    >

    <Button
        android:layout_gravity="right"
        android:id="@+id/editProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile" />

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_frame"
        android:contentDescription="profile picture"
        android:padding="8dp"
        android:src="@drawable/profile_default" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="42dp"
                android:layout_height="24dp"
                android:text="Email"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/emailDisplay"
                android:layout_width="232dp"
                android:layout_height="30dp"
                android:background="@color/light_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="42dp"
                android:layout_height="24dp"
                android:text="Name"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/nameDisplay"
                android:layout_width="232dp"
                android:layout_height="30dp"
                android:background="@color/light_gray" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="42dp"
                android:layout_height="24dp"
                android:text="Age"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/ageDisplay"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="51dp"
                android:layout_height="27dp"
                android:layout_marginLeft="42dp"
                android:text="Gender"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/genderDisplay"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@color/light_gray"
                app:layout_constraintVertical_bias="0.256" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="79dp"
                android:layout_height="26dp"
                android:text="Notificaiton"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/notificationsDisplay"
                android:layout_width="197dp"
                android:layout_height="33dp"
                android:background="@color/light_gray" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/dark_grey"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/editPalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Edit Pal"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="102dp"
        android:layout_height="31dp"
        android:layout_gravity="center"
        android:text="AI Pen-pal"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/chatbot_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:background="@drawable/round_frame"
            android:contentDescription="profile picture"
            android:padding="8dp"
            android:src="@drawable/ai_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Name: "
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/nameChatDisplay"
            android:layout_width="182dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/light_gray" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="42dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:text="Age: "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/ageChatDisplay"
            android:layout_width="70dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:background="@color/light_gray" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="55dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="15dp"
            android:text="Gender: "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/genderChatDisplay"
            android:layout_width="70dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:background="@color/light_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Persona: "
            android:textColor="@color/black" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>



</LinearLayout>
